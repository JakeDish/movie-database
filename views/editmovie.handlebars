<div class="box">
  YOLO
  <div class="columns is-mobile is-centered is-vcentered">
    <div class="column">
      <img src={{movie.image_name}} alt="" />
    </div>

    <div class="column is-flex-direction-row">
      <span
        id="movie-title"
        class="title"
        contenteditable="true"
      >{{movie.movie_name}}</span><br />
      <span
        id="desc"
        class="subtitle"
        contenteditable="true"
      >{{movie.movie_description}}</span><br />

      <label class="subtitle" for="">Would you like to change the movie's image? Yes </label>
      <input type="checkbox" id="check-box" />
      <span
        id="movie-img"
        style="display:none"
        class="subtitle"
        contenteditable="true"
      >Enter a new URL for the image</span><br />
      <button id="save-button" class="button is-success is-outlined mt-3">Save
        Edits</button>
    </div>
  </div>
</div>

<script src="/js/editmovie.js"></script>