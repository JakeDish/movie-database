
{{#each movies as |movie|}}
<div class="box">

  <div class="columns is-mobile is-centered is-vcentered">
    <div class="column">
      <img src={{movie.image_name}} alt="">
      {{!-- <img src="https://i.imgur.com/Pyp4DwX.png" alt=""> --}}
    </div>
    
    <div class="column is-flex-direction-row">
      <span class="title">{{movie.movie_name}}</span><br>
      <span class="subtitle">{{movie.movie_description}}</span><br>
      {{!-- only show like button if user is logged --}}
      {{!-- {{#if ../logged_in}} --}}
      <button class="button">Like</button>
      {{!-- {{/if}} --}}
      
      
    </div>
  </div>
</div>
{{/each}}

